@{
    ViewData["Title"] = "Funcionários";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 class="titulo-lista">Lista Função de Funcionários</h6>
                    <button class="btn btn-primary float-end" onclick="ModalFuncao()">Cadastrar</button>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div id="divListar" class="table-responsive p-0"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Função -->
<div class="modal fade" id="modalFuncao" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h3 class="font-weight-bolder text-primary text-gradient">Cadastro de Função</h3>
                        <p class="mb-0">Preencha os campos abaixo</p>
                    </div>
                    <div class="card-body pb-3">

                        <partial name="_DadosFormulario" />

                        <div class="text-center">
                            <button type="button" onclick="ModalFuncaoFechar()" class="btn bg-gradient-danger btn-lg btn-rounded w-100 mt-4 mb-0">Cancelar</button>
                            <button type="button" onclick="ModalFuncaoSalvar()" class="btn bg-gradient-primary btn-lg btn-rounded w-100 mt-4 mb-0">Salvar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Pages/FuncaoFuncionario/index.js" asp-append-version="true"></script>
<script src="~/js/Pages/FuncaoFuncionario/salvar.js" asp-append-version="true"></script>
<script src="~/js/Pages/FuncaoFuncionario/excluir.js" asp-append-version="true"></script>