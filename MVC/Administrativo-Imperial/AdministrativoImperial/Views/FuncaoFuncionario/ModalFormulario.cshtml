<div class="modal fade" id="modalFuncao" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h3 class="font-weight-bolder text-primary text-gradient">Cadastro de Função</h3>
                        <p class="mb-0">Preencha os campos abaixo</p>
                    </div>
                    <div class="card-body pb-3">

                        <div class="form-group">
                            <input type="hidden" id="idFuncaoTemp" />

                            <div class="form-row">
                                <label class="control-label">Nome</label>
                                <input id="nome" type="text" class="form-control" placeholder="Nome do Função" />
                            </div>
                            <div class="form-row mt-3">
                                <select id="selectExcluido" class="form-select" aria-label="Default select example">
                                    <option value="0">Ativo</option>
                                    <option value="1">Desativo</option>
                                </select>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="button" onclick="ModalFuncaoFechar()" class="btn bg-gradient-danger btn-lg btn-rounded w-100 mt-4 mb-0">Cancelar</button>
                            <button type="button" onclick="ModalFuncaoSalvar()" class="btn bg-gradient-primary btn-lg btn-rounded w-100 mt-4 mb-0">Salvar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>