
<div class="modal fade" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="exampleModalSignTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h3 class="font-weight-bolder text-primary text-gradient">Cadastrar Usuário</h3>
                        <p class="mb-0">Preencha os campos abaixo</p>
                    </div>
                    <div class="card-body pb-3">
                        <form role="form" class="text-left">

                            <input type="hidden" id="txtIdUsuarioTemp"  />

                            <div class="form-group">
                                <label>Nome</label>
                                <div class="input-group mb-3">
                                    <input id="txtNome" type="text" class="form-control" placeholder="Informe o nome">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>E-mail</label>
                                <div class="input-group mb-3">
                                    <input id="txtEmail" type="email" class="form-control" placeholder="Informe o e-mail">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Senha</label>
                                <div class="input-group mb-3">
                                    <input id="txtSenha" type="password" class="form-control" placeholder="Senha">
                                </div>
                            </div>

                            <div class="text-center">
                                <button onclick="ModalUsuarioFechar()" type="button" class="btn bg-gradient-danger btn-lg btn-rounded w-100 mt-4 mb-0">Cancelar</button>
                                <button onclick="ModalUsuarioSalvar()" type="button" class="btn bg-gradient-primary btn-lg btn-rounded w-100 mt-4 mb-0">Salvar</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>